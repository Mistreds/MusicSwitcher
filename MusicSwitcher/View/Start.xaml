<UserControl x:Class="MusicSwitcher.View.Start"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicSwitcher.View"
             mc:Ignorable="d" 
            >
    <Grid >
        <Ellipse StrokeThickness="2"  Stroke="White"  Width="35" Height="35" >
            <Ellipse.Effect>
                <DropShadowEffect
                    ShadowDepth="4"
                    Direction="330"
                    Color="Black"
                    Opacity="0.5"
                    BlurRadius="4"/>
            </Ellipse.Effect>
        </Ellipse>
        <Polygon Fill="White" Points="13, 10,13,26,25,18" >
            <Polygon.Effect>
                <DropShadowEffect
                    ShadowDepth="4"
                    Direction="330"
                    Color="Black"
                    Opacity="0.5"
                    BlurRadius="4"/>
            </Polygon.Effect>
        </Polygon>
    </Grid>
</UserControl>
